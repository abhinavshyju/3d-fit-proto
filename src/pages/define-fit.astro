---
import Layout from "@/layouts/main.astro";
---

<Layout title="Define Fit">
  <div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
    <div class="mx-auto p-2">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 text-center mb-2">
          Fit Definition
        </h1>
        <p class="text-gray-600 text-center mb-8">
          Define and configure fit measurements for garments
        </p>
        <div class="grid grid-cols-1 lg:grid-cols-[350px_1fr] gap-4">
          <!-- Sidebar -->
          <div class="space-y-6">
            <div
              class="bg-white rounded-xl shadow-lg p-6 border border-gray-200"
            >
              <div class="flex items-center gap-3 mb-6">
                <div
                  class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center"
                >
                  <svg
                    class="w-5 h-5 text-blue-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900">
                    Load Measurements
                  </h3>
                  <p class="text-sm text-gray-600">Upload trial data files</p>
                </div>
              </div>

              <div class="space-y-4 mb-6">
                <div class="space-y-2">
                  <label
                    class="text-sm font-medium text-gray-700 flex items-center gap-2"
                  >
                    <span class="w-2 h-2 bg-blue-500 rounded-full"></span>
                    Trial 1
                  </label>
                  <div class="relative">
                    <input
                      onchange="garmentOneUpload(event)"
                      type="file"
                      accept=".json"
                      class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"
                    />
                  </div>
                </div>

                <div class="space-y-2">
                  <label
                    class="text-sm font-medium text-gray-700 flex items-center gap-2"
                  >
                    <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                    Trial 2
                  </label>
                  <div class="relative">
                    <input
                      onchange="garmentTwoUpload(event)"
                      type="file"
                      accept=".json"
                      class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-green-50 file:text-green-700 hover:file:bg-green-100"
                    />
                  </div>
                </div>

                <div class="space-y-2">
                  <label
                    class="text-sm font-medium text-gray-700 flex items-center gap-2"
                  >
                    <span class="w-2 h-2 bg-purple-500 rounded-full"></span>
                    Trial 3
                  </label>
                  <div class="relative">
                    <input
                      onchange="garmentThreeUpload(event)"
                      type="file"
                      accept=".json"
                      class="w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-purple-50 file:text-purple-700 hover:file:bg-purple-100"
                    />
                  </div>
                </div>
              </div>

              <div class="space-y-3">
                <button
                  class="w-full flex items-center justify-center gap-2 px-4 py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-lg hover:from-blue-700 hover:to-blue-800 focus:ring-4 focus:ring-blue-200 transition-all duration-200 font-medium"
                  onclick="loadMeasurement()"
                >
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"
                    ></path>
                  </svg>
                  Load Measurement
                </button>
                <button
                  onclick="saveMasterJsonToFile()"
                  id="saveButton"
                  class="w-full flex items-center justify-center gap-2 px-4 py-3 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-lg hover:from-green-700 hover:to-green-800 focus:ring-4 focus:ring-green-200 transition-all duration-200 font-medium disabled:opacity-50 disabled:cursor-not-allowed"
                >
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"
                    ></path>
                  </svg>
                  Save Fit Definition
                </button>
              </div>
            </div>
          </div>

          <!-- Main Content -->
          <div class="space-y-6">
            <!-- Fit Definition Form -->
            <div
              class="bg-white rounded-xl shadow-lg p-6 border border-gray-200"
            >
              <div class="flex items-center gap-3 mb-6">
                <div
                  class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center"
                >
                  <svg
                    class="w-5 h-5 text-indigo-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900">
                    Fit Definition Details
                  </h3>
                  <p class="text-sm text-gray-600">
                    Configure the fit parameters and metadata
                  </p>
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="space-y-2">
                  <label class="block text-sm font-medium text-gray-700">
                    Category <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    id="category"
                    required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors"
                    placeholder="Enter category"
                  />
                  <div class="hidden text-sm text-red-600" id="category-error">
                    Category is required
                  </div>
                </div>

                <div class="space-y-2">
                  <label class="block text-sm font-medium text-gray-700">
                    Sub-Category <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    id="subcategory"
                    required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors"
                    placeholder="Enter sub-category"
                  />
                  <div
                    class="hidden text-sm text-red-600"
                    id="subcategory-error"
                  >
                    Sub-category is required
                  </div>
                </div>

                <div class="space-y-2">
                  <label class="block text-sm font-medium text-gray-700">
                    Fit Name <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    id="fitName"
                    required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors"
                    placeholder="Enter fit name"
                  />
                  <div class="hidden text-sm text-red-600" id="fitName-error">
                    Fit name is required
                  </div>
                </div>

                <div class="space-y-2">
                  <label class="block text-sm font-medium text-gray-700">
                    Technician <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    id="technician"
                    required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors"
                    placeholder="Enter technician name"
                  />
                  <div
                    class="hidden text-sm text-red-600"
                    id="technician-error"
                  >
                    Technician is required
                  </div>
                </div>

                <div class="space-y-2">
                  <label class="block text-sm font-medium text-gray-700">
                    Date <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="date"
                    id="date"
                    required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors"
                  />
                  <div class="hidden text-sm text-red-600" id="date-error">
                    Date is required
                  </div>
                </div>

                <div class="space-y-2">
                  <label class="block text-sm font-medium text-gray-700">
                    Tolerance % <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="number"
                    id="tolerance"
                    required
                    min="0"
                    max="100"
                    step="0.1"
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors"
                    placeholder="0.0"
                  />
                  <div class="hidden text-sm text-red-600" id="tolerance-error">
                    Tolerance is required
                  </div>
                </div>

                <div class="space-y-2">
                  <label class="block text-sm font-medium text-gray-700">
                    Version <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    id="version"
                    required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors"
                    placeholder="e.g., 1.0.0"
                  />
                  <div class="hidden text-sm text-red-600" id="version-error">
                    Version is required
                  </div>
                </div>
              </div>
            </div>

            <!-- Measurements Table -->
            <div
              class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-200"
            >
              <div class="p-6 border-b border-gray-200">
                <div class="flex items-center gap-3">
                  <div
                    class="w-10 h-10 bg-emerald-100 rounded-lg flex items-center justify-center"
                  >
                    <svg
                      class="w-5 h-5 text-emerald-600"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900">
                      Measurements
                    </h3>
                    <p class="text-sm text-gray-600">
                      Review and adjust measurement values
                    </p>
                  </div>
                </div>
              </div>

              <div class="overflow-x-auto">
                <table class="w-full">
                  <thead class="bg-gray-50">
                    <tr>
                      <th
                        class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider"
                      >
                        Level
                      </th>
                      <th
                        class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider"
                      >
                        Landmark
                      </th>
                      <th
                        class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider"
                      >
                        Critical
                      </th>
                      <th
                        class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider"
                      >
                        Trial 1
                      </th>
                      <th
                        class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider"
                      >
                        Trial 2
                      </th>
                      <th
                        class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider"
                      >
                        Trial 3
                      </th>
                      <th
                        class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider"
                      >
                        Average
                      </th>
                      <th
                        class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider"
                      >
                        Final Value
                      </th>
                    </tr>
                  </thead>
                  <tbody
                    class="bg-white divide-y divide-gray-200"
                    id="measurementTable"
                  >
                    <tr>
                      <td
                        colspan="8"
                        class="px-6 py-12 text-center text-gray-500"
                      >
                        <div class="flex flex-col items-center gap-3">
                          <svg
                            class="w-12 h-12 text-gray-300"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                            ></path>
                          </svg>
                          <div>
                            <p class="text-lg font-medium">
                              No measurements loaded
                            </p>
                            <p class="text-sm">
                              Upload trial files and click "Load Measurement" to
                              populate the table
                            </p>
                          </div>
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
<script src="../scripts/define-fit/index.ts"></script>
