---
import Layout from "@/layouts/main.astro";
---

<Layout title="Mark Body">
  <div class="min-h-screen bg-gray-50">
    <div class="mx-auto p-6">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 text-center mb-8">
          FIT DEFINITION
        </h1>
        <div class="grid grid-cols-[300px_1fr] gap-2">
          <div class="space-y-4">
            <div class="bg-white rounded-lg shadow-sm p-4">
              <p class="text-sm text-gray-600 mb-4">
                Load Body-Garment measurement
              </p>
              <div class="flex flex-col gap-4 mb-4">
                <div class="flex flex-col gap-1">
                  <label class="text-sm text-gray-800">Garment 1:</label>
                  <input
                    onchange="garmentOneUpload(event)"
                    type="file"
                    class="px-4 py-2 rounded-md shadow-sm border"
                  />
                </div>
                <div class="flex flex-col gap-1">
                  <label class="text-sm text-gray-800">Garment 2:</label>
                  <input
                    onchange="garmentTwoUpload(event)"
                    type="file"
                    class="px-4 py-2 rounded-md shadow-sm border"
                  />
                </div>
                <div class="flex flex-col gap-1">
                  <label class="text-sm text-gray-800">Garment 3:</label>
                  <input
                    onchange="garmentThreeUpload(event)"
                    type="file"
                    class="px-4 py-2 rounded-md shadow-sm border"
                  />
                </div>
              </div>

              <div class="space-y-3">
                <button
                  class="w-full flex items-center justify-center gap-2 px-4 py-2 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-300"
                  onclick="loadMeasurement()"
                >
                  ðŸ“¤ Load Measurement
                </button>
                <button
                  onclick="saveMasterJsonToFile()"
                  class="w-full flex items-center justify-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-md"
                >
                  ðŸ’¾ Save Fit
                </button>
              </div>
            </div>
          </div>
          <!-- Main Content -->
          <div class="space-y-6">
            <!-- Fit Definition Form -->
            <div class="bg-white rounded-lg shadow-sm p-6">
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1"
                    >Category</label
                  >
                  <input
                    type="text"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1"
                    >Sub-Category</label
                  >
                  <input
                    type="text"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1"
                    >Fit Name</label
                  >
                  <input
                    type="text"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1"
                    >Technician</label
                  >
                  <input
                    type="text"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1"
                    >Date</label
                  >
                  <input
                    type="date"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1"
                    >Tolerance %</label
                  >
                  <input
                    type="number"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1"
                    >Version</label
                  >
                  <input
                    type="text"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md"
                  />
                </div>
              </div>
            </div>

            <!-- Measurements Table -->
            <div class="bg-white rounded-lg shadow-sm overflow-hidden">
              <div
                class="p-4 border-b border-gray-200 flex justify-between items-center"
              >
                <h3 class="text-lg font-semibold text-gray-900">
                  Measurements
                </h3>
              </div>
              <div class="overflow-x-auto">
                <table class="w-full">
                  <thead class="bg-gray-50">
                    <tr>
                      <th
                        class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >Level</th
                      >
                      <th
                        class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >Landmark</th
                      >
                      <th
                        class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >Critical Y/N</th
                      >
                      <th
                        class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >Trial 1</th
                      >
                      <th
                        class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >Trial 2</th
                      >
                      <th
                        class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >Trial 3</th
                      >
                      <th
                        class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >Average</th
                      >
                      <th
                        class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >Value</th
                      >
                    </tr>
                  </thead>
                  <tbody
                    class="bg-white divide-y divide-gray-200"
                    id="measurementTable"
                  >
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
<script src="../scripts/define-fit/index.ts"></script>
