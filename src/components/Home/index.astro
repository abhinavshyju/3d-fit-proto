---
import { Card, CardContent } from "../ui/card";
---

<div class="container mx-auto px-4 py-12 max-w-5xl">
  <h1 class="text-4xl font-bold text-center mb-16">3D FIT ANALYSER</h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <a href="/upload-body">
      <Card className="h-48 hover:shadow-lg transition-shadow">
        <CardContent
          className="flex items-center justify-center h-full text-center p-6"
        >
          <p class="text-xl font-medium">
            Upload Body
            <br />
            &<br />
            Align
          </p>
        </CardContent>
      </Card>
    </a>

    <a href="/mark-body">
      <Card className="h-48 hover:shadow-lg transition-shadow">
        <CardContent
          className="flex items-center justify-center h-full text-center p-6"
        >
          <p class="text-xl font-medium">
            Mark Body
            <br />
            Levels and
            <br />
            Landmarks
            <br />
            (Bust, Waist
            <br />
            and Hip)
          </p>
        </CardContent>
      </Card>
    </a>

    <a href="#upload-garment">
      <Card className="h-48 hover:shadow-lg transition-shadow">
        <CardContent
          className="flex items-center justify-center h-full text-center p-6"
        >
          <p class="text-xl font-medium">
            Upload
            <br />
            Garment
            <br />
            and Align to
            <br />
            body
          </p>
        </CardContent>
      </Card>
    </a>

    <a href="/measure-relationship">
      <Card className="h-48 hover:shadow-lg transition-shadow">
        <CardContent
          className="flex items-center justify-center h-full text-center p-6"
        >
          <p class="text-xl font-medium">
            Measure
            <br />
            Body
            <br />
            garment
            <br />
            relationship
          </p>
        </CardContent>
      </Card>
    </a>

    <a href="/define-fit">
      <Card className="h-48 hover:shadow-lg transition-shadow">
        <CardContent
          className="flex items-center justify-center h-full text-center p-6"
        >
          <p class="text-xl font-medium">Define fit</p>
        </CardContent>
      </Card>
    </a>

    <a href="/fit-analyzer">
      <Card className="h-48 hover:shadow-lg transition-shadow">
        <CardContent
          className="flex items-center justify-center h-full text-center p-6"
        >
          <p class="text-xl font-medium">Fit Analyzer</p>
        </CardContent>
      </Card>
    </a>
  </div>
</div>
