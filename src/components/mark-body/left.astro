<div
  class="flex flex-col absolute top-0 left max-h-screen max-w-[600px] w-1/5 px-2 py-4"
>
  <div class="bg-white rounded-2xl px-2 py-1 border shadow">
    <h1 class="text-xl font-semibold mb-4">Body levels and landmarks</h1>
    <div class="flex justify-between w-full mb-2">
      <div class="flex flex-col">
        <label for="bodySelect">Select Body</label>
        <input
          class="bg-gray-50 border rounded max-w-[200px] text-sm px-1 py-0.5"
          type="file"
          id="bodySelect"
          multiple
          onchange="bodyUpload(event)"
        />
      </div>
    </div>
  </div>
</div>
<div class="absolute max-w-[400px] w-full left-2 bottom-2 flex flex-col gap-2">
  <div
    class="bg-white rounded-2xl p-4 shadow w-full hidden"
    id="unitMeasurementContainer"
  >
    <div class="text-lg font-bold text-gray-800 mb-2 flex items-center gap-2">
      Unit Measurement
    </div>
    <div class="flex flex-col gap-2">
      <input
        type="number"
        class="bg-gray-50 border rounded py-1 px-2"
        id="unitMeasurementInput"
      />
      <button
        class="bg-gray-100 py-1 rounded-md hover:bg-gray-200 cursor-pointer"
        onclick="unitMeasurementSave()">Save</button
      >
    </div>
  </div>

  <div class="bg-white rounded-2xl p-4 shadow w-full">
    <div class="text-lg font-bold text-gray-800 mb-2 flex items-center gap-2">
      Define Levels
    </div>
    <div class="flex flex-wrap items-center justify-between gap-2 mb-3">
      <p class="text-gray-500 text-sm">
        Click 3 points on the body to define levels
      </p>
    </div>
    <div class="overflow-y-auto max-h-[140px] rounded-lg border">
      <table class="w-full text-sm">
        <thead class="bg-gray-50 sticky top-0">
          <tr>
            <th class="py-2 px-4 text-left font-semibold text-gray-700"
              >Level</th
            >
            <th class="py-2 px-4"></th>
          </tr>
        </thead>
        <tbody id="levelTable" class="bg-white divide-y"></tbody>
      </table>
    </div>
  </div>
</div>
